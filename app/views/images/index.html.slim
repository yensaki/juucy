.container-fluid
  h1.h1.display-3
    = "Movie: #{@movie.file.filename}"
  - if @images.present?
    ul.list-group.list-group-flush
      - @images.each do |image|
        li.list-group-item
          = image_tag url_for(image.file), width: 120, class: 'img-fluid img-thumbnail'
          = image.following_distance
    = paginate @images
  - else
    .alert.alert-primary role="alert"

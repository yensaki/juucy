.container-fluid
  h1.h1.display-3
    = "Movie: #{@movie.file.filename}"
  - if @movie.audios.present?
    ul.list-group.list-group-flush
      - @movie.audios.each do |audio|
        li.list-group-item
          audio src="#{url_for(audio.file)}" controls=""
          = audio.words.presence || "(テキストなし)"
  - else
    .alert.alert-primary role="alert"
